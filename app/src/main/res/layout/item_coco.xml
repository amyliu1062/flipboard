<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_list_view_other_title_tv"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="科技"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:id="@+id/item_list_view_other_tick_bg_layout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/ic_tick_bg"
        android:layout_alignBottom="@+id/item_list_view_other_title_tv"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/item_list_view_other_tick_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/ic_tick" />

    </RelativeLayout>

</RelativeLayout>